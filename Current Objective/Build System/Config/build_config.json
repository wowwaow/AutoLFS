{
    "build_environment": {
        "default_resources": {
            "cpu_allocation": "auto",
            "memory_limit_mb": 4096,
            "disk_space_gb": 20,
            "network_bandwidth_mbps": 100,
            "io_priority": "normal"
        },
        "isolation": {
            "process_isolation": true,
            "network_isolation": false,
            "mount_points": ["source", "build", "install"]
        }
    },
    "script_generation": {
        "template_dir": "../Templates",
        "default_template": "build_script_template.sh",
        "variable_patterns": ["${VARIABLE}", "@VARIABLE@"],
        "platform_adapters": ["x86_64", "aarch64"]
    },
    "execution": {
        "parallel_builds": true,
        "max_parallel_jobs": "auto",
        "job_timeout_minutes": 120,
        "retry_attempts": 3,
        "retry_delay_seconds": 60
    },
    "monitoring": {
        "status_update_ms": 50,
        "resource_check_ms": 100,
        "log_rotation_size_mb": 100,
        "metrics_retention_days": 30
    },
    "validation": {
        "script_validation": {
            "syntax_check": true,
            "resource_check": true,
            "security_scan": true
        },
        "build_validation": {
            "artifact_verification": true,
            "checksum_verification": true,
            "dependency_check": true
        }
    },
    "performance": {
        "script_gen_timeout_ms": 1000,
        "build_init_timeout_ms": 2000,
        "state_update_timeout_ms": 50,
        "resource_alloc_timeout_ms": 100
    }
}

