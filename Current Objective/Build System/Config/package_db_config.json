{
    "database": {
        "type": "sqlite",
        "path": "../Package Management/packages.db",
        "backup_dir": "../Package Management/backups/"
    },
    "schema": {
        "tables": {
            "packages": {
                "metadata": ["name", "version", "description", "maintainer"],
                "build_info": ["requirements", "build_time", "disk_space"],
                "validation": ["checksum", "signature", "last_validated"],
                "state_tracking": ["status", "install_date", "last_updated"]
            },
            "dependencies": {
                "mapping": ["package_id", "dependency_id", "version_constraint"],
                "type": ["required", "optional", "build_time", "run_time"],
                "validation": ["compatibility_checked", "circular_checked"]
            },
            "versions": {
                "tracking": ["package_id", "version", "release_date"],
                "compatibility": ["min_deps", "max_deps", "conflicts"],
                "security": ["vulnerabilities", "patch_status"]
            }
        }
    },
    "performance": {
        "query_timeout_ms": 100,
        "max_connections": 10,
        "cache_size_mb": 50
    },
    "validation": {
        "integrity_check_interval": 3600,
        "backup_interval": 86400,
        "max_backup_size_mb": 1000
    }
}

